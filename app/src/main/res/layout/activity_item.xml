<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.sjaco.examen2.ActivityItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/activity_item_image"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:entries="@array/images"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_product_hint_title">

            <EditText
                android:id="@+id/activity_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/activity_item_category"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>

        <Spinner
            android:id="@+id/activity_item_store"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/activity_item_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"/>
</LinearLayout>
